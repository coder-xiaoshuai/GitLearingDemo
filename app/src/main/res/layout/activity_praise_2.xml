<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/animation_container"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        >

        <ImageView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/feed_like"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="0"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="45"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="90"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="120"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="135"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="235"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="270"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="305"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:src="@drawable/icon_like"
            app:layout_constraintCircle="@+id/center"
            app:layout_constraintCircleRadius="0dp"
            app:layout_constraintCircleAngle="350"
            android:alpha="0"
            tools:ignore="MissingConstraints"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>