<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhangshuai.kotlin.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello World!"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我是一个按钮"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorAccent"
                />

            <Button
                android:id="@+id/btn_image_video_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图片视频demo"
                />

            <Button
                android:id="@+id/btn_nine_image_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="九宫格视图demo"
                />

            <Button
                android:id="@+id/btn_auto_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="智能折行"
                />
            <Button
                android:id="@+id/btn_clickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="富文本"
                />
            <Button
                android:id="@+id/btn_path_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PATH 练习"
                />
            <Button
                android:id="@+id/btn_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PATH 练习"
                />
        </LinearLayout>

    </ScrollView>


</android.support.constraint.ConstraintLayout>