<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zhangshuai.kotlin.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我是一个按钮"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@color/colorAccent"
                />

            <Button
                android:id="@+id/btn_image_video_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图片视频demo"
                />

            <Button
                android:id="@+id/btn_nine_image_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="九宫格视图demo"
                />

            <Button
                android:id="@+id/btn_auto_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="智能折行"
                />
            <Button
                android:id="@+id/btn_clickable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="富文本"
                />
            <Button
                android:id="@+id/btn_path_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PATH 练习"
                />
            <Button
                android:id="@+id/btn_rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="RV 练习"
                />

            <Button
                android:id="@+id/btn_praise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仿抖音点赞"
                />

            <Button
                android:id="@+id/btn_praise2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="点赞2"
                />

            <Button
                android:id="@+id/btn_nine_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="九宫格容器"
                />

            <Button
                android:id="@+id/btn_gif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="生成GIF"
                />

            <Button
                android:id="@+id/btn_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="事件传递测试"
                />

            <Button
                android:id="@+id/btn_my_butter_knife"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="依赖注入测试"
                />

            <Button
                android:id="@+id/btn_profiler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="性能监测"
                />

            <Button
                android:id="@+id/btn_pre_download"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Glide预加载测试"
                />
            <Button
                android:id="@+id/btn_viewpager_demo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="viewpager动态增加删除测试"
                />

            <Button
                android:id="@+id/btn_set_test"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="set添加元素测试"
                />

            <Button
                android:id="@+id/btn_verification_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="验证码测试"
                />

            <Button
                android:id="@+id/btn_border_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="圆形描边"
                />
            <Button
                android:id="@+id/btn_age_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="圆形描边"
                />
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>